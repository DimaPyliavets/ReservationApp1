@model ReservationApp1.Models.Cuisine

@{
    ViewData["Title"] = "Show Menu Items";
}

<div class="container">
    <h2 class="mt-3">Menu Items for <span class="text-primary">@Model.CuisineName</span> cuisine</h2>
    <div>
        <a class="btn btn-secondary mt-3" asp-controller="Restaurants" asp-action="ShowRestaurantDetails" asp-route-id="@ViewBag.RestaurantId">
            <i class="bi bi-arrow-left"></i> Back to Restaurant
        </a>
    </div>

    @if (Model.MenuItem.Any())
    {
        <table class="table table-striped mt-3">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.MenuItem)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Price.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info mt-3" role="alert">
            No menu items available for this cuisine.
        </div>
    }
</div>
