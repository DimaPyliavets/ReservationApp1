@model ReservationApp1.Models.Reservation

@{
    ViewData["Title"] = "Reservation Details";
}
<div class="mt-4">
    <a asp-controller="Reservation" asp-action="ShowAllReservations" class="btn btn-primary">Return to All Reservations</a>
</div>
<h2>Reservation Details</h2>

<dl class="row">
    <dt class="col-sm-2">Reservation ID:</dt>
    <dd class="col-sm-10">@Model.ReservationId</dd>

    <dt class="col-sm-2">Restaurant:</dt>
    <dd class="col-sm-10">@Model.Restaurant.RestaurantName</dd>

    <dt class="col-sm-2">Reserved Zone:</dt>
    <dd class="col-sm-10">@Model.Zone.ZoneName</dd>

    <dt class="col-sm-2">User Name:</dt>
    <dd class="col-sm-10">@Model.User.UserName</dd>

    <dt class="col-sm-2">User Email:</dt>
    <dd class="col-sm-10">@Model.User.UserEmail</dd>

    <dt class="col-sm-2">Reservation Date:</dt>
    <dd class="col-sm-10">@Model.ReservationDate.ToShortDateString()</dd>
</dl>


