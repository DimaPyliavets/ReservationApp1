@model ReservationApp1.Models.Reservation

@{
    ViewData["Title"] = "Reservation Details";
}

<div class="container mt-4">
    <a asp-controller="Reservation" asp-action="ShowAllReservations" class="btn btn-primary"><i class="bi bi-arrow-left"></i> Return to All Reservations</a>

    <h2 class="mt-3">Reservation Details</h2>

    <div class="row">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">Reservation ID:</dt>
                <dd class="col-sm-8">@Model.ReservationId</dd>

                <dt class="col-sm-4">Restaurant:</dt>
                <dd class="col-sm-8">@Model.Restaurant.RestaurantName</dd>

                <dt class="col-sm-4">Reserved Zone:</dt>
                <dd class="col-sm-8">@Model.Zone.ZoneName</dd>

                <dt class="col-sm-4">Reservation Date:</dt>
                <dd class="col-sm-8">@Model.ReservationDate.ToShortDateString()</dd>
            </dl>
        </div>

        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">User Name:</dt>
                <dd class="col-sm-8">@Model.User.UserName</dd>

                <dt class="col-sm-4">User Email:</dt>
                <dd class="col-sm-8">@Model.User.UserEmail</dd>

                <dt class="col-sm-4">User Phone:</dt>
                <dd class="col-sm-8">@Model.User.UserPhone</dd>
            </dl>
        </div>
    </div>

    @* <button class="btn btn-secondary mt-3" onclick="printPDF(@Json.Serialize(Model))">
        <i class="bi bi-file-pdf"></i> Print PDF
    </button> *@
</div>

