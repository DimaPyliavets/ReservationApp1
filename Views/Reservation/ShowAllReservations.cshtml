@model List<ReservationApp1.Models.Reservation>

<h2 class="mt-4">All Reservations</h2>

@if (Model != null && Model.Any())
{
    <div class="table-responsive mt-3">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Reservation ID</th>
                    <th scope="col">User Name</th>
                    <th scope="col">Restaurant Name</th>
                    <th scope="col">Reservation Date</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var reservation in Model)
                {
                    <tr>
                        <td>@reservation.ReservationId</td>
                        <td>@reservation.User.UserName</td>
                        <td>@reservation.Restaurant.RestaurantName</td>
                        <td>@reservation.ReservationDate.ToShortDateString()</td>
                        <td>
                            <a asp-controller="Reservation" asp-action="ReservationDetails" asp-route-id="@reservation.ReservationId" class="btn btn-info btn-sm">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info mt-3" role="alert">
        No reservations available.
    </div>
}
