@model ReservationApp1.Models.Reservation

@{
    ViewData["Title"] = "Make Reservation";
}

<h2>Make Reservation</h2>

<form asp-controller="Reservation" asp-action="MakeReservation" method="post" class="needs-validation" novalidate>
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="User.UserName">Name</label>
                <input asp-for="User.UserName" class="form-control" required />
                <span asp-validation-for="User.UserName" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="User.UserSurname">Surname</label>
                <input asp-for="User.UserSurname" class="form-control" required />
                <span asp-validation-for="User.UserSurname" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="User.UserEmail">Email</label>
                <input asp-for="User.UserEmail" type="email" class="form-control" required />
                <span asp-validation-for="User.UserEmail" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="User.UserPhone">Phone</label>
                <input asp-for="User.UserPhone" class="form-control" required />
                <span asp-validation-for="User.UserPhone" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="RestaurantId">Select Restaurant</label>
        <select asp-for="RestaurantId" asp-items="@ViewBag.Restaurants" class="form-control" required>
            <option value="">-- Select Restaurant --</option>
        </select>
        <span asp-validation-for="RestaurantId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ZoneId">Select Zone</label>
        <select asp-for="ZoneId" asp-items="@ViewBag.Zones" class="form-control" id="zoneDropdown" required>
            <option value="">-- Select Zone --</option>
        </select>
        <span asp-validation-for="ZoneId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ReservationDate">Select Date</label>
        <input asp-for="ReservationDate" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
        <span asp-validation-for="ReservationDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit Reservation</button>
</form>
